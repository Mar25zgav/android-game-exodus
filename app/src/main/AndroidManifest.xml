<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exodus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <!--<meta-data android:name="android.max_aspect" android:value="2.4"-->/>

        <activity
            android:resizeableActivity="false"
            android:name=".Activities.MainMenuActivity"
            android:screenOrientation="landscape">
            <!--android:theme="@android:style/Theme.NoTitleBar.Fullscreen"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:resizeableActivity="false"
            android:name=".Activities.GameActivity"
            android:screenOrientation="landscape">
            <!--android:theme="@android:style/Theme.NoTitleBar.Fullscreen"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.OptionsActivity" android:theme="@style/AppTheme.WindowPopUpTheme"></activity>
        <activity android:name=".Activities.ScoresActivity" android:theme="@style/AppTheme.WindowPopUpTheme"></activity>
        <activity android:name=".Activities.HelpActivity" android:theme="@style/AppTheme.WindowPopUpTheme"></activity>

    </application>

</manifest>